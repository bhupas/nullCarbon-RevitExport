<Window x:Class="SCaddins.ExportSchedules.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        Title="Login to nullCarbon" 
        Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with logo/title -->
        <Border Grid.Row="0" Background="#010a4f" Padding="20,15">
            <TextBlock Text="nullCarbon LCA" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Login form -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="30" 
                CornerRadius="5" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1"
                Padding="30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Username:" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="14"/>
                <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8,6"
                         FontSize="14"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Password:" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="14"/>
                <PasswordBox cal:Message.Attach="[Event PasswordChanged] = [Action OnPasswordChanged($source)]"
                             Padding="8,6"
                             FontSize="14"
                             Margin="0,0,0,30"/>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="Login" 
                            cal:Message.Attach="Login"
                            Background="#010a4f"
                            Foreground="White"
                            FontSize="14"
                            Padding="15,8" 
                            Margin="0,0,5,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0066A8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="1" 
                            Content="Sign Up" 
                            cal:Message.Attach="SignUp"
                            Background="#1E9E42"
                            Foreground="White"
                            FontSize="14"
                            Padding="15,8"
                            Margin="5,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#167A32"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Status message -->
                <TextBlock Margin="0,20,0,0" 
                           Text="{Binding StatusMessage}" 
                           Foreground="Red"
                           TextWrapping="Wrap"
                           FontSize="13"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>